<h1>Edit Tv Show</h1>

<form action="/tv/{{_id}}?_method=PUT" method="POST">
    <input type="text" name="name" placeholder="name" value="{{name}}"/>
    <input type="number" name="releaseYear" placeholder="releaseYear" value="{{releaseYear}}"/>
    <input type="number" name="seasons" placeholder="seasons" value="{{seasons}}"/>
    <input type="text" name="network" placeholder="network" value="{{network}}"/>
    <input type="text" name="picture" placeholder="picture" value="{{picture}}"/>

    <input type="submit" value="Save"/>

    <a href="/tv/{{_id}}">
    <button>
    Back
    </button>
</a>
</form>